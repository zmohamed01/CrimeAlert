      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <h1 id="page_title">Contact Form</h1>

  <div class="form-group col-5">
    <%= form.label :name, "What is your name?",  class: "col-10 col-form-label"  %>
    <%= form.text_area :name, rows: 1 ,class: "form-control"  %>
  </div>
  
  <div class="form-group col-5">
    <%= form.label :email, "What is your email?",  class: "col-10 col-form-label"  %>
    <%= form.text_area :email, class: "form-control"  %>
  </div>
  
  <div class="form-group col-5">
    <%= form.label :message, "Please write your thought here",  class: "col-10 col-form-label"  %>
    <%= form.text_area :message, class: "form-control"  %>
  </div>
  
  <br></br>

  <div class="actions">
    <%= form.submit "Send", class: "btn btn-success" %>
  </div>
<% end %>