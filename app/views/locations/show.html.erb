<h4> View Report </h4><br/>

  <div class="card mb-3">
    <% if @location.image.attached? %>
    <img class="card-img-top" src="<%= url_for(@location.image) %>" alt="Card image cap" style="height:500px;">
      <div class="card-body">
        <h5 class="card-title"><%= @location.typec %></h5>
        <p class="card-text"><%= @location.description%></p>
        <p class="card-text"><small class="text-muted"><%= @location.datetime %></small></p>
        <%= link_to 'Edit', edit_location_path(@location), class:"btn btn-primary" %>
        <%= link_to 'Delete', location_path(@location), class:"btn btn-danger", method: :delete, data:{confirm: "Are you sure?"} %>
        <%= link_to 'Back to all submissions', locations_path, type: "button", class:"btn btn-secondary" %>
      </div>
    <% else %>
    <div class="card-body">
      <h5 class="card-title"><%= @location.typec %></h5>
      <h6 class="card-text"><%= @location.address %></h6><br/>
      <p class="card-text"><%= @location.description%></p>
      <p class="card-text"><small class="text-muted"><%= @location.datetime %></small></p>
      <%= link_to 'Edit', edit_location_path(@location), class:"btn btn-primary" %>
      <%= link_to 'Delete', location_path(@location), class:"btn btn-danger", method: :delete, data:{confirm: "Are you sure?"} %>
      <%= link_to 'Back to all submissions', locations_path, type: "button", class:"btn btn-secondary" %>
    </div>
  </div>
    <% end %>
